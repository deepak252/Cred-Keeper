<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Creds_Keeper" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/indigo</item>
        <item name="colorPrimaryVariant">@color/indigo_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/indigo</item>
        <item name="colorSecondaryVariant">@color/indigo_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:textColor">@color/black_500</item>
        <item name="fontFamily">@font/poppins</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="bottomNavigationStyle">@style/BottomNavStyle</item>
        <item name="appBarLayoutStyle">@style/AppbarStyle</item>


        <!-- Customize your theme here. -->

        <!--        <item name="windowActionBar">false</item>-->
        <!--        <item name="windowNoTitle">true</item>-->
        <!--        <item name="android:windowFullscreen">true</item>-->

    </style>

    <style name="BottomNavStyle" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="android:background">@color/white</item>
        <item name="itemTextColor">@color/bottom_nav_item_color</item>
        <item name="itemIconTint">@color/bottom_nav_item_color</item>
    </style>

    <style name="AppbarStyle" parent="Widget.MaterialComponents.AppBarLayout.Primary">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="AppbarTitleStyle">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

</resources>
